    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Default Debug",
            "program": "${workspaceFolder}/build/debug/naofs",
            "args": [
                "-f",
                "-s",
                "--loglevel=0",
                "--source=${workspaceFolder}/testfiles/data004.cpk",
                "mount"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CMake: build",
            "postDebugTask": "unmount"
        }
    ]
}
